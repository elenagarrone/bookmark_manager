<header>
  <div id="logo"><a href="/" id="homepage-logo">Bookmark Manager</a></div>
  <% unless @on_page %>
    <% if current_user %>
      <a href="/links/new" type="submit" class="button highlighten">Add link</a>
      <form id="tags" method="get" action="/tags">
        <input id='search_tags' class="search_tags" name="search_tags" type="text">
        <input class='button_tag' type="submit" value="Search tag">
      </form>
    <% end %>
  <% end %>

  <div id="user-links">
    <% if current_user %>
    
      <form id="sign-out" method="post" action="/sessions">
        <span id="welcome-message">
          Welcome, <%= current_user.email %>
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Sign out" class='sign_out'>
        </span>
      </form>

    <% else %>
      <% if @sign_in_page %>
        <a href='/users/new' id='sign-up' class='button'>Sign up</a>
      <% elsif @sign_up_page %>
        <a href='/sessions/new' id='sign-in' class='button'>Sign in</a>
      <% else %>
        <a href='/users/new' id='sign-up' class='button'>Sign up</a>
        <a href='/sessions/new' id='sign-in' class='button'>Sign in</a>
      <% end %>

    <% end %>

  </div>
</header>
